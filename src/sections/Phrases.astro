---
import CardInfo from "../components/CardInfo.astro"
import Cardphrases from "../components/Card.astro"
const phrases = [
    "En un amante no hay risa que no se altere con llanto",
    "Sin claridad no hay voz de sabiduría.",
    "Hasta el saber cansa cuando es saber por oficio.",
    "Queredlas cual las hacéis o hacedlas cual las buscáis.",
]
---

<CardInfo noHover={true} title="Frases" id="phrases" reference="https://sugarandspice.mx/2018/04/17/10-frases-de-sor-juana-ines-de-la-cruz-mas-alla-de-los-hombres-necios/#:~:text=%E2%80%9CHasta%20el%20saber%20cansa%20cuando%20es%20saber%20por%20oficio.%E2%80%9D&text=%E2%80%9CQueredlas%20cual%20las%20hac%C3%A9is%20o%20hacedlas%20cual%20las%20busc%C3%A1is.%E2%80%9D&text=%E2%80%9CTeniendo%20por%20mejor%20en%20mis,consumir%20la%20vida%20en%20vanidades.%E2%80%9D&text=%E2%80%9CAs%C3%AD%20como%20ninguno%20quiere%20ser,es%20consecuencia%20del%20ser%20m%C3%A1s.%E2%80%9D">
    <article class="grid gap-4 xl:grid-cols-4">
        {
            phrases.map((phrase, index)=>(
                <Cardphrases
                    content={phrase}
                    image={`./phrases/${index + 1}.webp`}
                    rounded="rounded-full"
                />
            ))
        }
    </article>
</CardInfo>