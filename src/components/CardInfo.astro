---
const {title, reference, id, noHover} = Astro.props
---
<article 
    id={id} 
    class={`w-full border border-neutral-700 rounded-lg p-8 space-y-6 
    ${!noHover&&"xl:hover:scale-105 transition-transform duration-200"}`}>
    <header>
        <h2 class="text-2xl font-semibold">{title}</h2>
    </header>
    <main class="text-xl leading-10">
        <slot/>
    </main>
    <footer class="text-right">
        <a 
        target="_blank" 
        class="text-slate-200 text-lg hover:text-slate-50 transition-colors" 
        href={reference}
        >Lee m√°s sobre esto
        </a>
    </footer>
</article>  