---
const pages = [
    {
        label: "¿Quién es?",
        to: "#whoIsShe"
    },
    {
        label: "Historia",
        to: "#history"
    },
    {
        label: "Logros",
        to: "#achievements"
    },
    {
        label: "Frases",
        to: "#phrases"
    },
    {
        label: "Libros",
        to: "#books"
    },
]
---

<nav class="w-full flex justify-center mt-12">
    <ul class="flex items-center gap-12 bg-neutral-800 px-12 py-2 rounded-full">
        {
            pages.map(({label, to})=>(
                <li class="text-xl font-semibold hover:text-neutral-400 transition-colors"><a href={to}>{label}</a></li>
            ))
        }
    </ul>
</nav>